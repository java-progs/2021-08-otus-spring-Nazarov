<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="questionDao" class="ru.otus.homework.dao.QuestionDaoCsv">
        <constructor-arg name="csvResourcePath" value="./questions.csv"/>
        <constructor-arg name="separator" value=","/>
        <constructor-arg name="ignoreQuotations" value="false"/>
        <constructor-arg name="skipLines" value="1"/>
    </bean>

    <bean id="questionService" class="ru.otus.homework.service.QuestionServiceImpl">
        <constructor-arg name="dao" ref="questionDao"/>
    </bean>

    <bean id="ioService" class="ru.otus.homework.service.IOServiceImpl">
    </bean>

    <bean id="quizService" class="ru.otus.homework.service.QuizServiceImpl">
        <constructor-arg name="questionService" ref="questionService"/>
        <constructor-arg name="ioService" ref="ioService"/>
    </bean>

</beans>